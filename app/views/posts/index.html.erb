<h3>Welcome!</h3>

<ul>
  <% @posts.each do |post| %>
    <li>
      <% if logged_in? %>
        <%=link_to '+', vote_post_path(post,{vote:true}), method:'post' %> 
      <%end%>
        / <%=post.total_votes%> / 
      <% if logged_in? %>
        <%=link_to '-', vote_post_path(post,{vote:false}), method:'post' %>  
      <%end%>
      <%= link_to post.title, post %>
    </li>
  <%end%>
</ul>
